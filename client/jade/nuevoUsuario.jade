doctype html
html
  head
    title Test
    meta(charset='UTF-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    link(rel="stylesheet" type="text/css" href="../css/semantic.min.css")
    style.
      body {
        background-color: #DADADA;
      }
      body > .grid {
        height: 100%;
      }
      .image {
        margin-top: -100px;
      }
      .column {
        max-width: 450px;
      }
    script(src="../js/semantic.min.js")
  body
    .ui.middle.aligned.center.aligned.grid
      .column
        h2.ui.teal.image.header
          img.image(src='../css/logo.png')
          .content Nuevo Usuario
        form.ui.large.form(action='/nuevoUsuario' method='post')
          .ui.stacked.segment
            .field
              .ui.left.icon.input
                i.bullseye.icon
                input(type='text', name='email', placeholder='email')
            .field
              .ui.left.icon.input
                i.bullseye.icon
                input(type='text', name='usuario', placeholder='usuario')
            .field
              .ui.left.icon.input
                i.bullseye.icon
                input(type='password', name='password', placeholder='contrase単a')
            .field
              .ui.left.icon.input
                i.bullseye.icon
                input(type='password', name='password1', placeholder='Confirme su contrase単a')
            if message!=undefined
              label #{message}
            .ui.error.message
            input.ui.fluid.large.teal.submit.button(type='submit', value='Crear')
            br
            a.ui.fluid.large.teal.submit.button(href='/login') Cancelar

  script.
    $(".form")
      .form({
        on:'blur',
        fields:{
          email:{
            identifier:'email',
            rules:[{
              type:'email',
              prompt:'Porfavor ingrese un email valido'
            }]
          },
          usuario:{
            identifier:'usuario',
            rules:[{
              type:'empty',
              prompt:'Ingrese un usuario'
            }]
          },
          password:{
            identifier:'password',
            rules:[{
              type:'empty',
              prompt:'Ingrese una contrase単a'
            }]
          },
          password1:{
            identifier:'password1',
            rules:[{
              type:'match[password]',
              prompt:'Las contrase単as no concuerdan'
            }]
          }
        }
      });



